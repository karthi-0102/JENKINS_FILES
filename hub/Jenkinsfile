pipeline{
    agent {
        docker {
            image 'node:10.15.3'
        }
    }
    

    stages{
       stage('Code-checkout'){
           
            environment {
                    CURRENT_HUB = "V2"
                    COVERAGE_THRESHOLD = 80
                    COVERAGE_MAX_DIFF = 1
            }
                    
            steps{
                checkout scm
                sh 'ls'       
            }
        }

        stage('install packages'){
          
            steps{
                sh 'ls'
                sh 'npm install'
                sh 'ls'
            }
        }

    }   
}
